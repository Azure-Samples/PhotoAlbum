@page
@model IndexModel
@{
    ViewData["Title"] = "Photo Gallery";
}

<div class="mb-4">
    <h1 class="display-4">📸 Photo Gallery</h1>
    <p class="lead">Upload and view your photos</p>
</div>

<!-- Upload Zone -->
<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Upload Photos</h5>
        <form id="upload-form" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div id="drop-zone" class="drop-zone mb-3">
                <div class="drop-zone-content">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-cloud-upload mb-3" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383z"/>
                        <path fill-rule="evenodd" d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3z"/>
                    </svg>
                    <p class="mb-2"><strong>Drag and drop photos here</strong></p>
                    <p class="text-muted small">or click to select files</p>
                    <p class="text-muted small">Supports: JPEG, PNG, GIF, WebP (max 10MB each)</p>
                </div>
                <input type="file" id="file-input" name="files" accept="image/jpeg,image/png,image/gif,image/webp" multiple hidden />
            </div>

            <!-- Upload Feedback -->
            <div id="upload-feedback" class="d-none">
                <div id="upload-progress" class="alert alert-info d-none">
                    <div class="spinner-border spinner-border-sm me-2" role="status">
                        <span class="visually-hidden">Uploading...</span>
                    </div>
                    Uploading photos...
                </div>
                <div id="upload-success" class="alert alert-success d-none"></div>
                <div id="upload-errors" class="alert alert-danger d-none"></div>
            </div>
        </form>
    </div>
</div>

<!-- Gallery -->
<div id="gallery-section">
    @if (Model.Photos == null || !Model.Photos.Any())
    {
        <div class="alert alert-info text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-images mb-3" viewBox="0 0 16 16">
                <path d="M4.502 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                <path d="M14.002 13a2 2 0 0 1-2 2h-10a2 2 0 0 1-2-2V5A2 2 0 0 1 2 3a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8a2 2 0 0 1-1.998 2zM14 2H4a1 1 0 0 0-1 1h9.002a2 2 0 0 1 2 2v7A1 1 0 0 0 15 11V3a1 1 0 0 0-1-1zM2.002 4a1 1 0 0 0-1 1v8l2.646-2.354a.5.5 0 0 1 .63-.062l2.66 1.773 3.71-3.71a.5.5 0 0 1 .577-.094l1.777 1.947V5a1 1 0 0 0-1-1h-10z"/>
            </svg>
            <p class="mb-0">No photos yet. Upload your first photo to get started!</p>
        </div>
    }
    else
    {
        <div class="row" id="photo-gallery">
            @foreach (var photo in Model.Photos)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card photo-card h-100">
                        <a asp-page="/Detail" asp-route-id="@photo.Id" class="photo-link">
                            <img src="@Url.Page("/PhotoFile", new { id = photo.Id })" class="card-img-top" alt="@photo.OriginalFileName" loading="lazy">
                        </a>
                        <div class="card-body">
                            <p class="card-text text-truncate" title="@photo.OriginalFileName">
                                <small><a asp-page="/Detail" asp-route-id="@photo.Id" class="text-decoration-none text-dark">@photo.OriginalFileName</a></small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    @photo.UploadedAt.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")
                                </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    @(photo.FileSize / 1024) KB
                                    @if (photo.Width.HasValue && photo.Height.HasValue)
                                    {
                                        <span> • @photo.Width x @photo.Height</span>
                                    }
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/upload.js" asp-append-version="true"></script>
}
