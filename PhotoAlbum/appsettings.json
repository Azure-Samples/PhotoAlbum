{
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:<server-name>.database.windows.net;Database=PhotoAlbumDb;Authentication=Active Directory Default;TrustServerCertificate=True"
  },
  "AzureStorageBlob": {
    "Endpoint": "https://yourstorageaccount.blob.core.windows.net",
    "ContainerName": "photos"
  },
  "FileUpload": {
    "MaxFileSizeBytes": 10485760,
    "AllowedMimeTypes": [
      "image/jpeg",
      "image/png",
      "image/gif",
      "image/webp"
    ],
    "MaxFilesPerUpload": 10
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
